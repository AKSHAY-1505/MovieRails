<html>
     <head>
          <link rel="stylesheet" href="../../assets/stylesheets/forms.css">
     </head>
     <body>
          <h1>Add a New Movie</h1>
          <div class="form-container">
               <%= form_with model:@movie, url: create_movie_path, method:"Post" , class: "my-form" do |form| %>
                    <div class="input-container">
                    <%= form.label :name, "Movie Name:" %>
                    <%= form.text_field :name %>
                    </div>

                    <div class="input-container">
                    <%= form.label :director, "Director Name:" %>
                    <%= form.text_field :director %>
                    </div>
                    
                    <div class="input-container">
                    <%= form.label :cast, "Cast Name:" %>
                    <%= form.text_field :cast %>
                    </div>

                    <div class="input-container">
                    <%= form.label :language, "Langauge:" %>
                    <%= form.text_field :language %>
                    </div> 

                    <div class="input-container">
                    <%= form.label :cover_photo, "Cover Photo:" %>
                    <%= form.file_field :cover_photo %>
                    </div>

                    <div class="input-container">
                    <%= form.submit "Add Movie",class: "btn btn-success" %>
                    </div>
               <% end %>
          </div>
     </body>
</html>
